@model Clothes.Models.TagsVM

<!--tag-->
<div class="tag">
    <h3 class="cate">Tags</h3>
    <div class="tags">
        <ul>
            @foreach (var tag in Model.Tags)
            {
                <li><a class="@(tag.Id == Model.SelectedTag ? "active" : "")" href="@Url.Action("Products", new { id = tag.Id })">@tag.Name</a></li>
            }
            <div class="clearfix"> </div>
        </ul>
    </div>
</div>
@using DAL.Models;
@{
    User user = ViewBag.User;
}

<!DOCTYPE html>
<html>
<head>
    <title>Топовый шмот</title>
    <link href="~/Content/css/bootstrap-3.1.1.min.css" rel='stylesheet' type='text/css' />
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Шмот Одежда Топ" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <link href='//fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Poiret+One' rel='stylesheet' type='text/css'>
    <!-- animation-effect -->
    <link href="~/Content/css/animate.min.css" rel="stylesheet">
    <!-- //animation-effect -->
    <script src="~/Content/js/jquery.min.js"></script>
    <!---pop-up-box---->
    <link href="~/Content/css/popuo-box.css" rel="stylesheet" type="text/css" media="all" />
    <script src="~/Content/js/wow.min.js"></script>
    <script>
        new WOW().init();
    </script>
    <!--fakeLoader-->
    <script src="~/Content/js/fakeLoader.min.js"></script>
</head>
<body>
    <div class="fakeLoader"></div>
    <script>
        $.fakeLoader({
            timeToHide: 1000,
            bgColor: "#3498db",
            spinner: "spinner4"
        });
    </script>
    <!--header-->
    <div class="header">
        <div class="header-top">
            <div class="container">
                <div class="col-sm-4 logo animated wow fadeInLeft" data-wow-delay=".5s">
                    <h1><a href="@Url.Action("Index")">#Топ<span>Шмот</span></a></h1>
                </div>
                <div class="col-sm-4 world animated wow fadeInRight" data-wow-delay=".5s">
                    @if (user != null)
                    {
                        <div class="cart box_1">
                            <a href="@Url.Action("Checkout")">
                                <h3>
                                    <div class="total">
                                        <span>@($"{user.FirstName} {user.LastName}")</span>
                                        <br />
                                        <span>@ViewBag.CartSubHeader</span>
                                    </div>
                                    <img src="~/Content/images/cart.png" alt="" />
                                </h3>
                            </a>
                            <p><a href="javascript:;" class="simpleCart_empty">Корзина</a></p>
                        </div>
                    }
                </div>
                <div class="col-sm-2 number animated wow fadeInRight" data-wow-delay=".5s">
                    <span><i class="glyphicon glyphicon-phone"></i>+380998881122</span>
                    <p>Набрать нас</p>
                </div>
                <div class="col-sm-2 search animated wow fadeInRight" data-wow-delay=".5s">
                    <a class="play-icon popup-with-zoom-anim" href="#small-dialog"><i class="glyphicon glyphicon-search"></i></a>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
        <div class="container">
            <div class="head-top">
                <div class="n-avigation">

                    <nav class="navbar nav_bottom" role="navigation">

                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="navbar-header nav_2">
                            <button type="button" class="navbar-toggle collapsed navbar-toggle1" data-toggle="collapse" data-target="#bs-megadropdown-tabs">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand" href="#"></a>
                        </div>
                        <!-- Collect the nav links, forms, and other content for toggling -->
                        <div class="collapse navbar-collapse" id="bs-megadropdown-tabs">
                            <ul class="nav navbar-nav nav_1">
                                <li><a href="@Url.Action("Index")">Главная</a></li>
                                <li class="dropdown mega-dropdown active">
                                    <a href="@Url.Action("Women")" class="dropdown-toggle" data-toggle="dropdown">Категории<span class="caret"></span></a>
                                    <div class="dropdown-menu mega-dropdown-menu">
                                        <div class="container-fluid">
                                            <!-- Tab panes -->
                                            <div class="tab-content">
                                                <div class="tab-pane active" id="men">
                                                    <ul class="nav-list list-inline">
                                                        @foreach (Category category in ViewBag.Categories)
                                                        {
                                                            <li><a href="@Url.Action("Category", new { id = category.Id })">@category.Name<img src="~/Content/images/@category.Image" class="img-responsive" alt="@category.Name" /></a></li>
                                                        }
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- Nav tabs -->
                                    </div>
                                </li>
                                <li><a href="@Url.Action("Products", new { id = (int?)null })">Товары</a></li>
                                <li><a href="@Url.Action("Contact")">Контакты</a></li>
                                @if (user == null)
                                {
                                    <li class="last"><a href="@Url.Action("Account")">Войти</a></li>
                                }
                                else
                                {
                                    <li class="last"><a href="@Url.Action("Logout")">Выйти</a></li>
                                }
                            </ul>
                        </div><!-- /.navbar-collapse -->

                    </nav>
                </div>
                <div class="clearfix"> </div>

                <div id="small-dialog" class="mfp-hide">
                    <div class="search-top">
                        <div class="login">
                            <form action="@Url.Action("Search")" method="get">
                                <input type="submit" value="">
                                <input type="text" name="search" value="Напишите ваш запрос..." onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '';}">
                            </form>
                        </div>
                    </div>
                </div>
                <script src="~/Content/js/jquery.magnific-popup.js" type="text/javascript"></script>
                <script>
                    $(document).ready(function () {
                        $('.popup-with-zoom-anim').magnificPopup({
                            type: 'inline',
                            fixedContentPos: false,
                            fixedBgPos: true,
                            overflowY: 'auto',
                            closeBtnInside: true,
                            preloader: false,
                            midClick: true,
                            removalDelay: 300,
                            mainClass: 'my-mfp-zoom-in'
                        });

                    });
                </script>
                <!---->
            </div>
        </div>
    </div>
    <!--//header-->

    @RenderBody()

    <!--footer-->
    <div class="footer">
        <div class="container">
            <div class="footer-top">
                <div class="col-md-6 top-footer animated wow fadeInLeft" data-wow-delay=".5s">
                    <h3>Подписывайся</h3>
                    <div class="social-icons">
                        <ul class="social">
                            <li><a href="#"><i></i></a> </li>
                            <li><a href="#"><i class="facebook"></i></a></li>
                            <li><a href="#"><i class="google"></i> </a></li>
                            <li><a href="#"><i class="linked"></i> </a></li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div class="col-md-6 top-footer1 animated wow fadeInRight" data-wow-delay=".5s">
                    <h3>Рассылка</h3>
                    <form action="@Url.Action("Subscribe")" method="post">
                        <input type="text" name="email" value="" onfocus="this.value='';" onblur="if (this.value == '') {this.value ='';}">
                        <input type="submit" value="Подписаться">
                    </form>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
        <div class="footer-bottom">
            <div class="container">
                <div class="col-md-2 footer-bottom-cate animated wow fadeInLeft" data-wow-delay=".5s">
                    <h6>Категории</h6>
                    <ul>
                        @foreach (Category category in ViewBag.Categories)
                        {
                            <li><a href="@Url.Action("Category", new { id = category.Id })">@category.Name</a></li>
                        }
                    </ul>
                </div>
                <div class="col-md-3 footer-bottom-cate animated wow fadeInLeft" data-wow-delay=".5s">
                    <h6>Бестселлеры</h6>
                    <ul>
                        @foreach (Product product in ViewBag.BestSellers)
                        {
                            <li><a href="@Url.Action("Single", new { id = product.Id })">@product.Name</a></li>
                        }
                    </ul>
                </div>
                <div class="col-md-2 footer-bottom-cate animated wow fadeInRight" data-wow-delay=".5s">
                    <h6>Теги</h6>
                    <ul>
                        @foreach (Tag tag in ViewBag.Tags)
                        {
                            <li><a href="@Url.Action("Products", new { id = tag.Id })">@tag.Name</a></li>
                        }
                    </ul>
                </div>
                <div class="col-md-5 footer-bottom-cate cate-bottom animated wow fadeInRight" data-wow-delay=".5s">
                    <h6>Контактные данные</h6>
                    <ul>
                        <li><i class="glyphicon glyphicon-map-marker" aria-hidden="true"></i>Адрес: Королева 28а, офис 155, г. Одесса, <span>Украина.</span></li>
                        <li><i class="glyphicon glyphicon-envelope" aria-hidden="true"></i>Email: <a href="mailto:info@topshmot.com">info@topshmot.com</a></li>
                        <li><i class="glyphicon glyphicon-earphone" aria-hidden="true"></i>Телефон: +38(099)-888-11-22</li>
                    </ul>
                </div>
                <div class="clearfix"> </div>
                <p class="footer-class animated wow fadeInUp animated" data-wow-delay=".5s" style="visibility: visible; animation-delay: 0.5s; animation-name: fadeInUp;">
                    © @DateTime.Today.Year #TопШмот
                    <br />
                    Все права защищены
                </p>
            </div>
        </div>
    </div>
    <!--//footer-->


    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/simpleCart.min.js"></script>

    <!-- slide -->
    <script src="~/Content/js/imagezoom.js"></script>
    <script src="~/Content/js/responsiveslides.min.js"></script>

    <!-- start menu -->
    <script type="text/javascript" src="~/Content/js/memenu.js"></script>
    <script>$(document).ready(function () { $(".memenu").memenu(); });</script>
    <script src="~/Content/js/simpleCart.min.js"></script>

    <!-- FlexSlider -->
    <script defer src="~/Content/js/jquery.flexslider.js"></script>
    <link rel="stylesheet" href="~/Content/css/flexslider.css" type="text/css" media="screen" />

    <script>
        $(document).ready(function () {
            for (var i = 0; i < 4; i++) {
                $('center').next().remove();
            }
            $('center').remove();
        })
    </script>

    @RenderSection("scripts", false)
</body>
</html>
